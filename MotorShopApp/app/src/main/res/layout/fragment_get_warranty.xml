<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".warranty.fragment.GetWarrantyFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:text="@string/how_to_get_warranty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Các sửa chữa bảo hành phải do MotorShop thực hiện. Để nhận được sửa chữa bảo hành quý khách nhất thiết phải mang xe đến MotorShop gần nhất.
\nTrong trường hợp xe không thể vận hành hoặc vận hành không an toàn, vui lòng liên hệ với. MotorShop gần nhất để được hướng dẫn, hoặc liên hệ với phòng Quan hệ khách hàng để được tư vấn. "
            android:textSize="15dp"
            android:textColor="#000"/>
    </LinearLayout>
</FrameLayout>